<UserControl x:Class="SymlinkSwapper.MVVM.View.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SymlinkSwapper.MVVM.View"
             xmlns:viewModel="clr-namespace:SymlinkSwapper.MVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewModel:AboutViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>

        
        
        <TextBlock Grid.Row="1" Text="{Binding AppName}" FontSize="40"
                           Margin="10" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="2" Text="{Binding AppVersion}" FontSize="20"
                           Margin="10" HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="4" Text="{Binding ProjectUrl}" FontSize="14"
                           Margin="10" HorizontalAlignment="Center"/>


    </Grid>
</UserControl>
